    <div id="wrapper">

        <!-- Sidebar -->
        <%-include("./layout/sidebar")%>
        <!-- End of Sidebar -->
        
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <!-- Main Content -->
            <%-include("./layout/navbar")%>
            <!-- End of Main Content -->
            
            <!-- <div class="container-fluid"> -->
                <div class="container  ">
                <h1>Edit Page</h1>
                  <form action="/updateBlog/<%=data.id%>" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label>Name</label>
                            <input type="text" name="name" placeholder="Enter product name" class="form-control" value="<%=data.name%>"/>
                        </div>
                        
                        <div class="mb-3">
                            <label>category</label>
                            <input type="text" name="category" placeholder="Enter product Category" class="form-control" value="<%=data.category%>"/>
                        </div>

                        <div class="mb-3">
                            <label>Description</label>
                            <input type="text" name="description" placeholder="Enter product Description" class="form-control" value="<%=data.description%>"/>
                        </div>
                        
                      

                        <td>
                            <%if(Array.isArray(data.image)){%>
                                <%data.image.forEach(img=>{%>
                                    <img src="<%=img%>" height="100" style="margin:3px; border-radius: 5px;" />
                               <% })%>
                            <%}%>
                        </td>


                        <div class="form-group">
                            <label>Image</label>
                            <input type="file" class="form-control" name="image" multiple required>
                        </div>


                         <button type="submit" class="btn btn-primary">Submit</button>
                   </form>
                    
            <!-- </div> -->

     
          </div>
